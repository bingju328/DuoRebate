<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_load"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_white"
    >

    <RelativeLayout
        android:id="@+id/layout_load_fail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/load_fail_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/load_error"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/tv_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/load_fail_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_10dip"
            android:text="加载失败，请重试"
            android:textSize="@dimen/textsize_16sp"
            android:textColor="@color/gray_666"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_load_no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/load_no_data_image"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:src="@mipmap/jk_nojk_icon"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/tv_no_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/load_no_data_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_10dip"
            android:text="你当前还没有借款"
            android:textSize="@dimen/textsize_16sp"
            android:textColor="@color/gray_666"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/loading_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:visibility="gone"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loading_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_10dip"
            android:text="数据加载中"
            android:textSize="@dimen/textsize_16sp"
            android:textColor="@color/gray_666"
            />
    </RelativeLayout>
</FrameLayout>