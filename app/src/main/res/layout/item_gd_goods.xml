<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_item_content_gradview"
        android:layout_width="@dimen/dimen_200dip"
        android:layout_height="wrap_content"
        android:background="@color/main_white"
        android:orientation="vertical"
        >
        <!--com.yidonglianjie.sdk.connector.view.RoundImageView-->
        <ImageView
            android:id="@+id/iv_icon_gradview"
            android:layout_width="@dimen/dimen_200dip"
            android:layout_height="@dimen/dimen_200dip"
            android:background="@color/gray_999"
            />

        <TextView
            android:id="@+id/tv_title_gradview"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="【老北京酸梅汤7份装】75g/包 酸甜可口 消暑解腻"
            android:textColor="@color/gray_333"
            android:textSize="@dimen/textsize_14sp"
            android:layout_marginLeft="@dimen/dimen_7dip"
            android:layout_marginRight="@dimen/dimen_7dip"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/dimen_3dip"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_25dip"
            android:layout_marginTop="-7dp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dimen_7dip"
            android:layout_marginRight="@dimen/dimen_7dip"
            >
            <TextView
                android:id="@+id/tv_saled_gradview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已售181"
                android:textColor="@color/gray_999"
                android:textSize="@dimen/textsize_13sp"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/tv_posted_gradview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_7dip"
                android:text="包邮"
                android:textColor="@color/gray_999"
                android:textSize="@dimen/textsize_13sp"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/tv_shop_type_gradview"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_7dip"
                android:gravity="right"
                android:text="天猫"
                android:textColor="@color/main_color_normal"
                android:textSize="@dimen/textsize_13sp"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>

        <View
            style="@style/line_horization_style"
            android:layout_marginLeft="@dimen/dimen_7dip"
            android:layout_marginRight="@dimen/dimen_7dip"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_30dip"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dimen_7dip"
            >
            <TextView
                android:id="@+id/tv_current_price_gradview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="29.90"
                android:textSize="@dimen/dimen_15dip"
                android:textColor="@color/gray_333"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/tv_original_price_gradview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45.90"
                android:textSize="@dimen/dimen_13dip"
                android:textColor="@color/gray_999"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_7dip"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/hhyj_ll_tefan_gradview"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_25dip"
            android:layout_marginTop="-5dp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dimen_7dip"
            android:layout_marginBottom="@dimen/dimen_5dip"
            >
            <TextView
                android:id="@+id/tv_rebate_icon_gradview"
                android:layout_width="@dimen/dimen_18dip"
                android:layout_height="@dimen/dimen_18dip"
                android:gravity="center"
                android:text="返"
                android:textSize="@dimen/dimen_13dip"
                android:textColor="@color/main_white"
                android:background="@drawable/bg_btn_maincolor_press"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/tv_rebate_price_gradview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥15.90"
                android:textSize="@dimen/dimen_15dip"
                android:textColor="@color/main_color_normal"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_7dip"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>