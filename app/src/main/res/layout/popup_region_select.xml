<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aigestudio="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/selector_silver_item"
        >
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dimen_20dip"
            android:paddingRight="@dimen/dimen_20dip"
            android:paddingTop="@dimen/dimen_10dip"
            android:paddingBottom="@dimen/dimen_10dip"
            android:text="取消"
            android:background="@drawable/selector_silver_item"
            android:textColor="@color/gray_333"
            android:textSize="@dimen/textsize_16sp" />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="单位地址"
            android:textColor="@color/gray_666"
            android:textSize="@dimen/textsize_16sp" />
        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dimen_20dip"
            android:paddingRight="@dimen/dimen_20dip"
            android:paddingTop="@dimen/dimen_10dip"
            android:paddingBottom="@dimen/dimen_10dip"
            android:text="确定"
            android:background="@drawable/selector_silver_item"
            android:textColor="@color/gray_333"
            android:textSize="@dimen/textsize_16sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/main_white"
        android:paddingTop="@dimen/dimen_10dip"
        android:paddingBottom="@dimen/dimen_20dip"
        android:paddingLeft="@dimen/dimen_10dip"
        android:paddingRight="@dimen/dimen_10dip"
        >

        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/whlv_popup_region_select_province"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/main_white"
            aigestudio:wheel_atmospheric="true"
            aigestudio:wheel_curved="true"
            aigestudio:wheel_cyclic="false"
            aigestudio:wheel_item_align="center"
            aigestudio:wheel_item_text_color="@color/gray_666"
            aigestudio:wheel_item_text_size="15sp"
            aigestudio:wheel_selected_item_text_color="@color/gray_333" />

        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/whlv_popup_region_select_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/main_white"
            aigestudio:wheel_atmospheric="true"
            aigestudio:wheel_curved="true"
            aigestudio:wheel_cyclic="false"
            aigestudio:wheel_item_align="center"
            aigestudio:wheel_item_text_color="@color/gray_666"
            aigestudio:wheel_item_text_size="15sp"
            aigestudio:wheel_selected_item_text_color="@color/gray_333" />

        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/whlv_popup_region_select_district"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/main_white"
            aigestudio:wheel_atmospheric="true"
            aigestudio:wheel_curved="true"
            aigestudio:wheel_cyclic="false"
            aigestudio:wheel_item_align="center"
            aigestudio:wheel_item_text_color="@color/gray_666"
            aigestudio:wheel_item_text_size="15sp"
            aigestudio:wheel_selected_item_text_color="@color/gray_333" />
    </LinearLayout>

</LinearLayout>