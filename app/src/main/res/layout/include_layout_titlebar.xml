<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_titlebar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_titlebar_height"
    android:background="@color/titlebar_bg_color_normal"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/titlebar_iv_left"
        android:layout_width="@dimen/dimen_40dip"
        android:layout_height="@dimen/dimen_40dip"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_tabbar_selector"
        android:padding="@dimen/dimen_10dip"
        android:layout_marginLeft="@dimen/dp_marign_left"
        android:visibility="gone"
         />

    <TextView
        android:id="@+id/titlebar_tv_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_8dip"
        android:maxLength="8"
        android:background="@drawable/bg_tabbar_selector"
        android:gravity="center_vertical"
        android:textColor="@color/titletar_title_color"
        android:layout_marginLeft="@dimen/dimen_10dip"
        android:layout_centerVertical="true"
        android:visibility="gone"
         />

    <TextView
        android:id="@+id/titlebar_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:maxWidth="224dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/titletar_title_color"
        android:textSize="@dimen/textsize_commonmax" />

    <ImageView
        android:id="@+id/titlebar_iv_right"
        android:layout_width="@dimen/dimen_40dip"
        android:layout_height="@dimen/dimen_40dip"
        android:background="@drawable/bg_tabbar_selector"
        android:padding="@dimen/dimen_10dip"
        android:layout_marginRight="@dimen/dp_marign_right"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
         />

    <TextView
        android:id="@+id/titlebar_tv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_8dip"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_tabbar_selector"
        android:gravity="center_vertical"
        android:textColor="@color/titletar_title_color"
        android:layout_marginRight="@dimen/dimen_10dip"
        android:layout_centerVertical="true"
        android:visibility="gone"
         />

</RelativeLayout>